location:
    source_directories:
        {% for app in using %}
        - {{app.backupdir}}
        {% endfor %}

    repositories:
       - {{vborgmatic_backup_target}}{{vborgmatic_repo}}

storage:
    encryption_passphrase: "{{vborgmatic_pw}}"

retention:
    keep_daily: 7
    keep_weekly: 4
    keep_monthly: 6
    keep_yearly: 5

consistency:
    checks:
        - repository
        - archives