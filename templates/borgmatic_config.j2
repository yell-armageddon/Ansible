location:
    source_directories:
        {% for app in borgmatic.additional_backup_dirs %}
        - {{app}}
        {% endfor %}
        - {{dockerpath}}



    repositories:
       - {{borgmatic.repo_one}}
       - {{borgmatic.repo_two}}

storage:
    encryption_passphrase: "{{borgmatic.passphrase}}"

retention:
    keep_daily: 7
    keep_weekly: 4
    keep_monthly: 6
    keep_yearly: 5

consistency:
    checks:
        - name: repository
          frequency: 2 weeks
        - name: archives
          frequency: 1 week