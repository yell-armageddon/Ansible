<% require 'rails_autolink' %>
<h3>Comments: </h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 ">
	    <% @deck.revs.each do |r| %>
              <% if r.comments.count>0%>
		    <h4>Comments for rev
			    <%= r.rev_nr %>		</h4>
	    <% end %>
	      <% r.comments.order('created_at DESC').each do |f| %>
		      <div class="panel panel-primary small ">
		        <div class="panel-heading nomargin">
				<%= f.user.name %>,
				submitted at 
				<%= f.created_at%>
			</div>
			<%=auto_link(f.text) %>
		      </div>
	      <% end %>
	    <% end %>
    </div>
  </div>
</div>
