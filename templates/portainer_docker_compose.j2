version: "3"
services:
 portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer1
    restart: unless-stopped
    ports:
        - '9000:9000'
    environment:
        - TZ=Europe/Berlin
    volumes:
        - {{dockerpath}}/portainer/data:/data
        - /var/run/docker.sock:/var/run/docker.sock
        - '/etc/localtime:/etc/localtime:ro'
    restart: unless-stopped


